<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Preparation Host || School Compare </title>
    <meta name="description" content="">
    <meta name="keyword" content="">
    <link rel="canonical" href="" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="/public/images/favicon.png" type="image/x-icon" />
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700&family=Roboto:ital,wght@0,400;0,500;0,700;1,400;1,500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.4.2/css/all.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/public/css/style.css" rel="stylesheet">
    <link href="/public/css/responsive.css" rel="stylesheet">
</head>

<body>
    <%- include('../partials/navbar')%>
        <div class="bannerSecBg" style="background-color: #8abcc5;">
            <div class="bannerOverlay">
                <div class="container">
                    <div class="bannerDetailTitle schoolDe">
                        <h3>Compare Schools</h3>
                    </div>
                </div>
            </div>
        </div>

        <section class="school_detail_page">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-9">
                        <div class="schoolSh mb-3">
                            <h2>Compare Schools</h2>
                            <div class="row align-items-center">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <select class="form-select">
                                          <option selected="">Board</option>
                                          <option value="">UP Board</option>
                                          <option value="">CBSE</option>
                                        </select>
                                    </div>
                                    <div class="form-group mt-2">
                                        <select class="form-select">
                                          <option selected="">Location</option>
                                          <option value="">Delhi</option>
                                          <option value="">Noida</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="text-center border bgCom">
                                        <div class="ovl">
                                            <strong>Delhi Public School</strong>
                                            <p>Sector 24, Rohini, Delhi</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="text-center border bgCom">
                                        <div class="ovl">
                                            <strong>DPS International School</strong>
                                            <p>Sector 6, Saket, Delhi</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="schoolSh mb-3">
                            <h2>School Type</h2>
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">Ownership</th>
                                        <td>Private</td>
                                        <td>Private</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="col">School Format</th>
                                        <td>Day School </td>
                                        <td>Day School </td>
                                    </tr>
                                    <tr>
                                        <th scope="col">Co-Ed Status</th>
                                        <td>Co-Education</td>
                                        <td>Co-Education</td>
                                    </tr>
                                    <tr>
                                        <th scope="col">Official Application Partner</th>
                                        <td>-</td>
                                        <td>-</td>
                                    </tr>
                                    <tr>
                                        <th scope="col">Verified by school</th>
                                        <td>-</td>
                                        <td>-</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="schoolSh mb-3">
                            <h2>Academics</h2>
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">Board</th>
                                        <td>CBSE</td>
                                        <td>Cambridge</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="col">Language of Instruction</th>
                                        <td>English </td>
                                        <td>English </td>
                                    </tr>
                                    <tr>
                                        <th scope="col">Academic Session</th>
                                        <td>April to March </td>
                                        <td>April to March </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="schoolSh mb-3">
                            <h2>Distance</h2>
                            <p class="text-center">Please share your location to calculate the distance</p>
                            <div class="d-flex align-items-center justify-content-center my-3">
                                <a href="#!" class="change_location d-flex align-items-center btn btn-outline-primary mr-2">
                                    <span class="icon-target1 smallIcon pr-1"></span> 
                                    Use My Current Location
                                </a>
                            </div>
                        </div>
                        <div class="schoolSh mb-3">
                            <h2>Fee Structure</h2>
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">Total cost of new admission</th>
                                        <td>₹1,69,955</td>
                                        <td>₹4,37,353</td>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                        <div class="schoolSh mb-3">
                            <h2>Campus and Facility</h2>
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">Campus Type</th>
                                        <td>Urban</td>
                                        <td>Urban</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="col">Campus Size</th>
                                        <td>4 Acres</td>
                                        <td>6 Acres</td>
                                    </tr>
                                    <tr>
                                        <th scope="col">Total Facilities</th>
                                        <td>20</td>
                                        <td>30</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="schoolSh mb-3">
                            <h2>Quality of Education</h2>
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">Year of Establishment</th>
                                        <td>1995</td>
                                        <td>2003</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="col">Student Faculty Ratio</th>
                                        <td>18:1</td>
                                        <td>20:1</td>
                                    </tr>
                                    <tr>
                                        <th scope="col">Total Faculty</th>
                                        <td>127</td>
                                        <td>100</td>
                                    </tr>
                                    <tr>
                                        <th scope="col">Awards</th>
                                        <td>-</td>
                                        <td>-</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <%- include('../partials/footer')%>
            <script type="text/javascript" src="/public/js/jquery.min.js"></script>
            <script type="text/javascript" src="/public/js/main.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
            <script src="https://code.jquery.com/jquery-2.2.0.min.js" type="text/javascript"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick.js"></script>

</body>

</html>