    <section class="studyGoal">
      <div class="container">
        <div class="studyGoalTitle">
          <h3>Select Your Study Goal</h3>
        </div>
        <div class="PartnersSlider slider">
            <% studyGoalData?.forEach(function(studyGoalData){ %>

