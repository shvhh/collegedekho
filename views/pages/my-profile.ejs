<!DOCTYPE html>
<html lang="en">

<head>
    <title>Rigalma</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link
    href="https://fonts.googleapis.com/css2?family=Arima:wght@100;200;300;400;500;600;700&display=swap"
    rel="stylesheet"
  />
  <link
    rel="stylesheet"
    href="https://site-assets.fontawesome.com/releases/v6.4.2/css/all.css"
  />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <link href="/public/css/style.css" rel="stylesheet" />
  <link href="/public/css/responsive.css" rel="stylesheet" />
</head>

<body>
    <%- include('../partials/navbar')%>
    
    <section>
        <div class="container">
        <div class="modal-body">
            <div class="account-head">
                <h1>Update Account</h1>
            </div>
            <div class="row">
               <div class="col-md-6">
                  <div class="jsx-2114236980 media my-2 leadform-header">
                     <div class="jsx-2114236980 rounded-circle p-3 lead-hdr-img">
                        <img data-src="https://images.collegedunia.com/public/asset/img/cd-static-nr/leadform_logo.png?h=50&amp;w=50&amp;mode=stretch" src="https://images.collegedunia.com/public/asset/img/cd-static-nr/leadform_logo.png?h=50&amp;w=50&amp;mode=stretch" alt=" logo" height="50px" class="jsx-2355921263 lazyloaded">
                     </div>
                     <div class="mx-2">
                        <h3>Account Details</h3>
                        <p class="font-weight-normal">Get details and
                           latest updates</p>
                     </div>
                  </div>
                  <div class="mt-5 text-center img-account">
                     <img src="/public/images/password-1.png" class="w-50">
                  </div>
               </div>
               <div class="col-md-6">
                  <form action="/userProfileUpdated"  class="form-modal" method="POST"onsubmit="return userValidation()">
                     <div class="row justify-content-between text-left">
                        <div class="form-group">
                           <label class="form-control-label">Name</label>
                           <input type="text" placeholder="Enter your name" value="<%=data?.name%>"id="name" name="name">
                           <p class="allError" id="nameError"></p>

                        </div>
                        <div class="form-group">
                           <label class="form-control-label">Email</label>
                           <input type="text" placeholder="Enter your mail id" value="<%=data?.email%>" id="emaildata" name="email">
                           <p class="allError" id="emailError"></p>

                        </div>
                        <div class="form-group">
                           <label class="form-control-label">Mobile Number</label>
                           <input type="text" placeholder="Enter your number" value="<%=data?.phone%>" id="phone" name="phone">
                           <p class="allError" id="phoneError"></p>

                        </div>
                        <div class="form-group">
                           <select class="form-select p-2" aria-label="Gender" id="gender" name="gender">
                              <option selected="">Select your gender</option>
                              <% gender.forEach(function(gender){ %>
                              <option value="<%=gender%>"<%= (`${gender}` === `${data.gender}`)? 'selected' : '' %>><%=gender%></option>
                           


                              <% }) %>

                       
                           </select>
                           <p class="allError" id="genderError"></p>

                        </div>
                        <div class="form-group">
                           <label class="form-control-label">DOB</label>
                           <input type="text" placeholder="DD/MM/YYYY" value="<%=data?.dob%>" id="dob" name="dob">
                           <p class="allError" id="dobError"></p>

                        </div>
                       
                     <div class="text-center">
                        <div class="form-group text-center pb-2">
                           <!-- <p  type="submit"  class="submitBtn">Save</p>/ -->
                  <button class="submitBtn"type="submit">Save</button>
                     
                        </div>
                        <!-- <p style="color: #1D1D1D;line-height: 1.3;">I'am User?
                           <a href="#!" onclick="loginOpen(this)" style="color: #ECA500;">Login Now</a>
                        </p> -->
                     </div>
                  </form>
               </div>
            </div>
         </div>
         </div>
    </section>

    <%- include('../partials/footer')%>

    <script type="text/javascript" src="/public/js/jquery.min.js"></script>
    <script type="text/javascript" src="/public/js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script
      src="https://code.jquery.com/jquery-2.2.0.min.js"
      type="text/javascript"
    ></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick.js"></script>


    <script>
      function userValidation(e){
         console.log("userValidation")
   
   var name = document.getElementById("name").value;
       var email = document.getElementById("emaildata").value;
       var phone = document.getElementById("phone").value;
       var dob = document.getElementById("dob").value;
      var name = document.getElementById("name").value;
      
       var gender = document.getElementById("gender").value;
   
       
       console.log(email)
   
       var emailErrorData = document.getElementById("emailError");
       var phoneErrorData = document.getElementById("phoneError");
       var dobErrorData = document.getElementById("dobError");
       var nameErrorData = document.getElementById("nameError");
       
       var genderErrorData = document.getElementById("genderError");
   
       var emailReg = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/;
       var phoneReg = /^\d{10}$/;
       var dobReg = /^\d{2}[/-]\d{2}[/-]\d{4}$/;
       // in dob future date not allowed
   
   
       if(name == ""){
         emailErrorData.innerHTML = "";
         phoneErrorData.innerHTML = "";
         dobErrorData.innerHTML = "";

         genderErrorData.innerHTML = "";
         nameErrorData.innerHTML = "Please enter name";
   
         return false;
       }
   
       if(email == ""){
         emailErrorData.innerHTML = "Please enter email";
         phoneErrorData.innerHTML = "";
         dobErrorData.innerHTML = "";
         nameErrorData.innerHTML = "";
      
         genderErrorData.innerHTML = "";
   
         return false;
       }
   
       if(phone == ""){
         emailErrorData.innerHTML = "";
         phoneErrorData.innerHTML = "Please enter phone";
         dobErrorData.innerHTML = "";
         nameErrorData.innerHTML = "";
        
         genderErrorData.innerHTML = "";
   
         return false;
       }
   
   
       if (!emailReg.test(email)) {
         phoneErrorData.innerHTML = "";
         nameErrorData.innerHTML = "";
      
         dobErrorData.innerHTML = "";
         genderErrorData.innerHTML = "";
         emailErrorData.innerHTML = "Please enter valid email";
         return false;
       }
       if (!phoneReg.test(phone)) {
         emailErrorData.innerHTML = "";
         nameErrorData.innerHTML = "";
        
         dobErrorData.innerHTML = "";
         gender
         phoneErrorData.innerHTML = "Please enter valid phone";
   
         return false;
       }
       if (!dobReg.test(dob)) {
         emailErrorData.innerHTML = "";
         phoneErrorData.innerHTML = "";
         nameErrorData.innerHTML = "";
    
         genderErrorData.innerHTML = "";
         dobErrorData.innerHTML = "Please enter valid dob";
         return false;
       }
   
       // in dob present and future date not allowed
   
       var today = new Date();
       var dd = String(today.getDate()).padStart(2, "0");
       var mm = String(today.getMonth() + 1).padStart(2, "0"); //January is 0!
       var yyyy = today.getFullYear();
   
       today = mm + "/" + dd + "/" + yyyy;
       console.log(today);
   
       // convert dob to mm/dd/yyyy format
   
       var dob = dob.split("/");
       var dob = dob[1] + "/" + dob[0] + "/" + dob[2];
       console.log(dob);
   
       if (dob > today) {
         emailErrorData.innerHTML = "";
         phoneErrorData.innerHTML = "";
         nameErrorData.innerHTML = "";
       
         genderErrorData.innerHTML = "";
         dobErrorData.innerHTML = "Please enter valid dob";
         return false;
       }
   
       // if dob year is greater than  present year show error//
   
       if(dob.split("/")[2] > today.split("/")[2]){
         console.log("year is greater");
         emailErrorData.innerHTML = "";
         phoneErrorData.innerHTML = "";
         nameErrorData.innerHTML = "";
     
         genderErrorData.innerHTML = "";
         dobErrorData.innerHTML = "Please enter valid dob";
         return false;
       }
   
       if (dob == today) {
         emailErrorData.innerHTML = "";
         phoneErrorData.innerHTML = "";
         nameErrorData.innerHTML = "";
   
         genderErrorData.innerHTML = "";
         dobErrorData.innerHTML = "Please enter valid dob";
         return false;
       }
   
   
     
   
       if(gender ==""){
         emailErrorData.innerHTML = "";
         phoneErrorData.innerHTML = "";
         dobErrorData.innerHTML = "";
         nameErrorData.innerHTML = "";
       
         genderErrorData.innerHTML ="Please Select Gender"
         return false;
   
       }
   
         return true;
      }
   
      
   </script>
</body>
</html>



